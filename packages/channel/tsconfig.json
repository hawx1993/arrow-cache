{
  "compilerOptions": {
    "module": "commonjs",
    "target": "ES6",
    "rootDir": "src",
    "outDir": "dist",
    "types": ["node"],
    "lib": ["ESNext", "WebWorker"],
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "declaration": true,
    "strict": true,
    "noImplicitAny": true
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules"]
}
