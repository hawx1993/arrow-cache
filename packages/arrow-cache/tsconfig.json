{
  "compilerOptions": {
    "module": "commonjs",
    "target": "ES6",
    "rootDir": "src",
    "outDir": "dist",
    "types": ["node"],
    "lib": ["ESNext", "WebWorker"],
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "declaration": true
  },
  "include": ["./src/**/*"],
  "exclude": ["node_modules", "typings"]
}
